{
  "name": "ngx-glide-app",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "start:lib": "ng build ngx-glide --watch",
    "build:lib": "ng build ngx-glide",
    "build:lib:prod": "ng build ngx-glide --prod",
    "test:lib": "ng test ngx-glide",
    "lint:lib": "ng lint ngx-glide",
    "copy:lib": "cp README.md dist/ngx-glide && cp LICENSE dist/ngx-glide",
    "publish:lib": "npm run build:lib:prod && npm run copy:lib && cd dist/ngx-glide && npm publish --access public",
    "publish:app": "npm run build:lib && npm run prod && angular-cli-ghpages --dir=dist/ngx-glide-app",
    "dev": "concurrently \"npm:start:lib\" \"npm:start\"",
    "prod": "ng build --prod --base-href=\"/ngx-glide/\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.2.12",
    "@angular/cdk": "^11.2.11",
    "@angular/common": "~11.2.12",
    "@angular/compiler": "~11.2.12",
    "@angular/core": "~11.2.12",
    "@angular/forms": "~11.2.12",
    "@angular/material": "^11.2.11",
    "@angular/platform-browser": "~11.2.12",
    "@angular/platform-browser-dynamic": "~11.2.12",
    "@angular/router": "~11.2.12",
    "@glidejs/glide": "^3.3.0",
    "rxjs": "~6.5.5",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1102.11",
    "@angular/cli": "~11.2.11",
    "@angular/compiler-cli": "~11.2.12",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "angular-cli-ghpages": "^0.6.2",
    "codelyzer": "^6.0.0",
    "concurrently": "^5.2.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^11.2.4",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.1.5"
  }
}
